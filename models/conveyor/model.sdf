<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<sdf version="1.9">
  <model name="conveyor">

    <!-- Joint to fix conveyor to the world -->
    <joint name="base_joint" type="fixed">
      <parent>world</parent>
      <child>frame</child>
    </joint>

    <!-- Main frame of conveyor -->
    <link name="frame">
      <pose>0 0 0.5 0 0 0</pose>
      <collision name="frame_collision">
        <geometry>
          <box>
            <size>20.0 2.5 1</size>
          </box>
        </geometry>
      </collision>
      <visual name="frame_visual">
        <geometry>
          <box>
            <size>20.0 2.5 1</size>
          </box>
        </geometry>
        <material>
          <ambient>1 1 1 1</ambient>
          <diffuse>1 1 1 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Moving part of conveyor -->
    <link name="belt">
      <pose>-10 0 1.01 0 0 0</pose>
      <gravity>0</gravity>
      <visual name="belt_visual">
        <geometry>
          <box>
            <size>20.0 2.6 0.1</size>
          </box>
        </geometry>
        <!-- Make visible for debug -->
        <material>
          <ambient>0 0 0 0.5</ambient>
          <diffuse>0 0 0 0.5</diffuse>
        </material>
      </visual>
      <collision name="belt_collision">
        <geometry>
          <box>
            <size>20.0 2.6 0.1</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>100</mu>
              <mu2>100</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <joint name="belt_joint" type="prismatic">
      <parent>world</parent>
      <child>belt</child>
      <axis>
        <xyz>1 0 0</xyz>
      </axis>
    </joint>

    <plugin filename="gz-sim-joint-controller-system" name="gz::sim::systems::JointController">
      <joint_name>belt_joint</joint_name>
      <initial_velocity>1.0</initial_velocity>
      <topic>belt_vel</topic>
    </plugin>

    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
      <joint_name>belt_joint</joint_name>
    </plugin>

  </model>
</sdf>
