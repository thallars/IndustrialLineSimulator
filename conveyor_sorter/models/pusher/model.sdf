<?xml version="1.0"?>
<sdf version="1.9">
  <model name="pusher">

    <!-- Joint to fix pusher to the world -->
    <joint name="base_joint" type="fixed">
      <parent>world</parent>
      <child>base</child>
    </joint>

    <!-- Pusher base -->
    <link name="base">
      <pose> 0 -2.5 3 0 0 0 </pose>
      <visual name="base_visual">
        <geometry>
          <box>
            <size> 2 2 6 </size>
          </box>
        </geometry>
        <material>
          <ambient> 0.2 0.2 0.2 1 </ambient>
          <diffuse> 0.2 0.2 0.2 1 </diffuse>
        </material>
      </visual>
    </link>

    <!-- Rod -->
    <link name="rod">
      <pose relative_to="base"> 0 0.25 -1.4 0 0 0 </pose>
      <visual name="rod_visual">
        <geometry>
          <box>
            <size> 1.6 2 1 </size>
          </box>
        </geometry>
        <material>
          <ambient> 0.2 0.2 0.2 1 </ambient>
          <diffuse> 0.2 0.2 0.2 1 </diffuse>
        </material>
      </visual>
      <collision name="rod_collision">
        <geometry>
          <box>
            <size> 1.6 2 1 </size>
          </box>
        </geometry>
      <surface>
          <friction>
            <ode>
              <mu>5.0</mu>
              <mu2>5.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <iyy>0.1</iyy>
          <izz>0.1</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="rod_joint" type="prismatic">
      <parent>base</parent>
      <child>rod</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <plugin
      filename="gz-sim-joint-position-controller-system"
      name="gz::sim::systems::JointPositionController">
      <joint_name>rod_joint</joint_name>
      <topic>topic_name</topic>
      <p_gain>50</p_gain>
      <i_gain>0.1</i_gain>
      <d_gain>5.0</d_gain>
      <cmd_max>5000</cmd_max>
      <cmd_min>-5000</cmd_min>
    </plugin>

    <plugin
      filename="gz-sim-joint-state-publisher-system"
      name="gz::sim::systems::JointStatePublisher">
      <joint_name>rod_joint</joint_name>
    </plugin>

  </model>
</sdf>